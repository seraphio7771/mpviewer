<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="1" id="com.sergiydomanitskiy.mpviewer" version="0.0.1" xmlns="http://www.w3.org/ns/widgets">
    <name>MobPress - переглядач</name>
    <description>
        Переглядач неопублікованих видань з mobpress.com.ua
    </description>
    <author email="seraphio777@gmail.com" href="http://sergiy-domanitskiy.com">
        Сергій Доманіцький
    </author>
    <access origin="*" />

    <plugin name="cordova-plugin-dialogs" version="1.2.1" />
